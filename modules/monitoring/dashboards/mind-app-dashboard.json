{
  "title": "MIND Application Overview",
  "tags": ["mind", "application", "overview"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Notes",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "mind_notes_active_count",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 1000}
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Active Users",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "mind_users_active_count",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Request Rate (req/s)",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "rate(mind_http_requests_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "decimals": 2,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Error Rate (%)",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(mind_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(mind_http_requests_total[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "decimals": 2,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          },
          "unit": "percent"
        }
      }
    },
    {
      "id": 5,
      "type": "graph",
      "title": "Notes Operations Over Time",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "rate(mind_notes_created_total[5m])",
          "legendFormat": "Created",
          "refId": "A"
        },
        {
          "expr": "rate(mind_notes_updated_total[5m])",
          "legendFormat": "Updated",
          "refId": "B"
        },
        {
          "expr": "rate(mind_notes_deleted_total[5m])",
          "legendFormat": "Deleted",
          "refId": "C"
        },
        {
          "expr": "rate(mind_notes_read_total[5m])",
          "legendFormat": "Read",
          "refId": "D"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Operations/sec"
        }
      ]
    },
    {
      "id": 6,
      "type": "graph",
      "title": "HTTP Request Latency (p95)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(mind_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95 latency",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, rate(mind_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p99 latency",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Latency"
        }
      ]
    },
    {
      "id": 7,
      "type": "piechart",
      "title": "Notes by Status",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "mind_notes_by_status",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 8,
      "type": "piechart",
      "title": "Notes by Color Theme",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 14},
      "targets": [
        {
          "expr": "mind_notes_by_color",
          "legendFormat": "{{color}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "donut"
      }
    },
    {
      "id": 9,
      "type": "stat",
      "title": "Database Connections",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 14},
      "targets": [
        {
          "expr": "mind_database_connections_active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 20}
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 10,
      "type": "table",
      "title": "Recent HTTP Requests by Endpoint",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
      "targets": [
        {
          "expr": "topk(10, sum by(endpoint, method) (rate(mind_http_requests_total[5m])))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true},
            "indexByName": {},
            "renameByName": {
              "endpoint": "Endpoint",
              "method": "Method",
              "Value": "Requests/sec"
            }
          }
        }
      ]
    }
  ]
}
