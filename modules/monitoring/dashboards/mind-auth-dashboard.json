{
  {
    "title": "MIND Authentication & User Activity",
    "tags": ["mind", "auth", "users", "security"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "type": "row",
        "title": "Authentication Overview",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "collapsed": false
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Successful Logins (Total)",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 1},
        "targets": [
          {
            "expr": "mind_auth_login_success_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Failed Logins (Total)",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 1},
        "targets": [
          {
            "expr": "mind_auth_login_failures_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "orange", "value": 10}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Logouts (Total)",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 1},
        "targets": [
          {
            "expr": "mind_auth_logout_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "New Registrations (Total)",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 1},
        "targets": [
          {
            "expr": "mind_auth_registrations_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "purple", "value": null}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 6,
        "type": "gauge",
        "title": "Login Success Rate (%)",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 7},
        "targets": [
          {
            "expr": "mind_auth_login_success_total / (mind_auth_login_success_total + mind_auth_login_failures_total) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 7,
        "type": "timeseries",
        "title": "Login Activity Over Time",
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 7},
        "targets": [
          {
            "expr": "rate(mind_auth_login_success_total[5m]) * 60",
            "legendFormat": "Successful Logins/min",
            "refId": "A"
          },
          {
            "expr": "rate(mind_auth_login_failures_total[5m]) * 60",
            "legendFormat": "Failed Logins/min",
            "refId": "B"
          },
          {
            "expr": "rate(mind_auth_logout_total[5m]) * 60",
            "legendFormat": "Logouts/min",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "pointSize": 5,
              "stacking": {"mode": "none"}
            },
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "type": "row",
        "title": "User Activity",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 15},
        "collapsed": false
      },
      {
        "id": 9,
        "type": "stat",
        "title": "Total Active Users",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "mind_users_active_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "orange", "value": 100},
                {"color": "red", "value": 200}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 10,
        "type": "timeseries",
        "title": "User Growth",
        "gridPos": {"h": 6, "w": 16, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "mind_users_active_count",
            "legendFormat": "Total Users",
            "refId": "A"
          },
          {
            "expr": "rate(mind_auth_registrations_total[1h]) * 3600",
            "legendFormat": "New Users/hour",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 15,
              "pointSize": 5
            },
            "color": {"mode": "palette-classic"},
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "New Users/hour"},
              "properties": [
                {
                  "id": "custom.axisPlacement",
                  "value": "right"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 11,
        "type": "row",
        "title": "Security Monitoring",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 22},
        "collapsed": false
      },
      {
        "id": 12,
        "type": "timeseries",
        "title": "Failed Login Attempts (Security Alert)",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 23},
        "targets": [
          {
            "expr": "rate(mind_auth_login_failures_total[1m]) * 60",
            "legendFormat": "Failed Attempts/min",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 30,
              "pointSize": 5
            },
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "alert": {
          "name": "High Failed Login Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 13,
        "type": "stat",
        "title": "Login Failure Rate (Last Hour)",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 23},
        "targets": [
          {
            "expr": "rate(mind_auth_login_failures_total[1h]) * 3600",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "decimals": 1,
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 14,
        "type": "stat",
        "title": "Active Sessions (Estimated)",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 23},
        "targets": [
          {
            "expr": "mind_auth_login_success_total - mind_auth_logout_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 15,
        "type": "row",
        "title": "Session Analytics",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 31},
        "collapsed": false
      },
      {
        "id": 16,
        "type": "timeseries",
        "title": "User Engagement Timeline",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rate(mind_auth_login_success_total[5m]) * 300",
            "legendFormat": "Logins (5min window)",
            "refId": "A"
          },
          {
            "expr": "rate(mind_notes_created_total[5m]) * 300",
            "legendFormat": "Notes Created (5min window)",
            "refId": "B"
          },
          {
            "expr": "rate(mind_notes_updated_total[5m]) * 300",
            "legendFormat": "Notes Updated (5min window)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "fillOpacity": 80,
              "pointSize": 5,
              "stacking": {"mode": "normal"}
            },
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      }
    ]
  }
}
